<div id="myModal" class="modal">
  <div class="modal-content">
    <h2>모달 창</h2>
    <p>제출 하시겠습니까?</p>
    <div class="modal-buttons">
      <button onclick="confirmSubmission(true)">예</button>
      <button onclick="confirmSubmission(false)">아니오</button>
    </div>
  </div>
</div>
<script>
  const on_edit = () => {
    location.href = "/admin/edit_candidate";
  };
  const updatePreview = (elementId, value) => {
    document.getElementById(elementId).innerText = value;
  };
  const changeBackgroundColor = (elementId, color) => {
    document.getElementById(elementId).style.fo = color;
  };

  function openModal() {
    document.getElementById("myModal").style.display = "block";
  }

  // 제출 확인
  function confirmSubmission(isConfirmed) {
    if (isConfirmed) {
      // 예 버튼 클릭 시 처리할 동작
      alert("제출되었습니다.");
    } else {
      // 아니오 버튼 클릭 시 처리할 동작
      alert("제출이 취소되었습니다.");
    }

    // 모달 닫기
    closeModal();
  }

  // 모달 닫기
  function closeModal() {
    document.getElementById("myModal").style.display = "none";
  }
</script>
